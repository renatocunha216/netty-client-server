    <bean id="dataSourceDB" class="com.zaxxer.hikari.HikariDataSource" destroy-method="close">
        <property name="driverClassName" value="oracle.jdbc.OracleDriver" />
        <property name="jdbcUrl" value="jdbc:oracle:thin:@localhost:1521:XE" />
        <property name="username" value="TESTE" />
        <property name="password" value="teste" />
        <property name="maximumPoolSize" value="15" />
        <property name="minimumIdle" value="1" />
        <property name="idleTimeout" value="30000" /> <!-- em milisegundos -->
        <property name="connectionTimeout" value="30000" />
        <property name="maxLifetime" value="1800000" />
        <property name="keepaliveTime" value="120000" />

        <property name="poolName" value="OracleHikariCPPool" />
    </bean>

    <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="dataSourceDB" />
        <property name="mapperLocations" value="classpath*:br/com/rbcti/server/mybatis/mappers/**/*.xml" />
    </bean>

    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSourceDB"/>
    </bean>

    <!-- Habilitando o suporte a transações declarativas -->
    <tx:annotation-driven transaction-manager="transactionManager"/>

    <!-- DAOs -->
    <bean id="userDAO" class="br.com.rbcti.server.dao.UserDAO">
        <property name="sqlSessionFactory" ref="sqlSessionFactory" />
        <!-- applicationContext.xml]: Property 'sqlSessionFactory' or 'sqlSessionTemplate' are required -->
    </bean>


    <!-- Services -->
    <bean id="userService" class="br.com.rbcti.server.services.UserService">
        <!-- <property name="accountDao" ref="accountDao"/> <property name="itemDao" ref="itemDao"/> -->
        <property name="userDAO" ref="userDAO"/>
    </bean>


    <bean id="loginCommand" class="br.com.rbcti.server.commands.LoginCommand">
        <property name="userService" ref="userService" />
    </bean>


</beans>